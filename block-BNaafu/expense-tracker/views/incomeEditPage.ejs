<%- include('partials/header') %>
<main>
  <section>
    <div class="container">
      <form action="/income/<%= income.id %>" class="form" method="POST">
        <input
          type="text"
          name="incname"
          placeholder="Enter Income Name"
          value="<%= income.incname %>"
        />
        <input
          type="text"
          name="sources"
          placeholder="Enter the Income Source"
          value="<%= income.sources %>"
        />
        <input
          type="number"
          name="amount"
          placeholder="Amount"
          value="<%= income.amount %>"
        />
        <input type="date" name="date" value="<%= income.date %>" />
        <input type="submit" value="Update Income" />
      </form>
    </div>
  </section>
</main>

<%- include('partials/footer') %>
