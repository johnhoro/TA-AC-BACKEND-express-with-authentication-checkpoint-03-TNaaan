<%- include('partials/header') %>
<main>
  <section>
    <div class="container">
      <h1>Expense Details Page</h1>
      <div class="red detail-page">
        <h2><%= expense.expname %></h2>
        <% expense.category.forEach(e => { %>
        <h2>
          <span><%= e %></span>
        </h2>
        <% }) %>
        <h2><span>Date: </span><%= date %></h2>
        <h2><span>Amount: </span> <%= expense.amount %></h2>
        <div class="btn-delete">
          <a href="/expense/<%= expense.id %>/edit">Edit</a>
          <a href="/expense/<%= expense.id %>/delete">Delete</a>
        </div>
      </div>
    </div>
  </section>
</main>

<%- include('partials/footer') %>
